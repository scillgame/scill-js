{
  "name": "@scillgame/scill-js",
  "version": "1.2.5",
  "description": "SCILL Gamification as a Service SDK for NodeJS and JavaScript (browsers).",
  "author": "4Players Development Team",
  "keywords": [
    "fetch",
    "typescript",
    "swagger-client",
    "@scillgame/scill-typescript"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "browser": {
    "./dist/index.js": "./public/scill.js"
  },
  "typings": "./dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build && npm run build-client",
    "build-client": "browserify dist/scillclient.js -o public/scill.js --standalone SCILL",
    "build": "tsc --outDir dist/",
    "test": "jest"
  },
  "files": [
    "dist/**/*",
    "public/**/*",
    "custom.d.ts"
  ],
  "dependencies": {
    "mqtt": "^4.2.6",
    "portable-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^12.12.6",
    "browserify": "^17.0.0",
    "buffer": "^6.0.3",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^3.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
