{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "node"
  ]
}
